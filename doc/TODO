./mcmc -data [DATA-FILE] 
       -group [GROUP-FILE]                   # Assignment of libraries to treatment groups 
       -hyper [HYPERPARAMETERS-OUTPUT-FILE]  # output hyperparamters
       -rates [ACCEPT-RATES-FILE]            # output acceptance rates for metropolis steps
       -heterosis [HETEROSIS-PROBS-FILE]     # Gene-wise probabilities of heterosis
       -diffexpr [DIFF-EXPR-PROBS-FILE]      # Gene-wise probabilities of differential 
                                             #   expression across parents

       # input files for known hyperparameters (empirical Bayes)       

       -sigc [SIGC-FILE] 

       -d [D-FILE]
       -tau [TAU-FILE]

       -thephi [THEPHI-FILE]
       -sigphi [SIGPHI-FILE]

       -thealp [THEALP-FILE]
       -sigalp [SIGALP-FILE]
       -pialp [PIALP-FILE]

       -thedel [THEDEL-FILE]
       -sigdel [SIGDEL-FILE]
       -pidel [PIDEL-FILE]