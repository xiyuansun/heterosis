./mcmc -data [DATA-FILE] 
       -group [GROUP-FILE]                   # Assignment of libraries to treatment groups 

       -iter [NUMBER-ITERATIONS]             # number of Monte Carlo iterations
       -burnin [NUMBER-BURNIN]               # burn-in for calculating the probabilities above
       -joint                                # set to jointly sample phi_g, alpha_g, and delta_g

       -heterosis [HETEROSIS-PROBS-FILE]     # Gene-wise probabilities of heterosis
       -diffexpr [DIFF-EXPR-PROBS-FILE]      # Gene-wise probabilities of differential 
                                             #   expression across parents

       -hyper [HYPERPARAMETERS-OUTPUT-FILE]  # output hyperparamters
       -rates [ACCEPT-RATES-FILE]            # output acceptance rates for metropolis steps

       # input known initialization constants

       -sigc0 [SIGC0-VAL]
       -d0 [D0-VAL]
       
       -atau [ATAU-VAL]
       -aalp [AALP-VAL]
       -adel [ADEL-VAL]
       
       -btau [BTAU-VAL]
       -balp [BALP-VAL]
       -bdel [BDEL-VAL]
       
       -gamphi [GAMPHI-VAL]
       -gamalp [GAMALP-VAL]
       -gamdel [GAMDEL-VAL]

       -sigphi0 [SIGPHI0-VAL]
       -sigalp0 [SIGALP0-VAL]
       -sigdel0 [SIGDEL0-VAL]

       # input known hyperparameters (empirical Bayes)       

       -sigc [SIGC-VAL] 

       -d [D-VAL]
       -tau [TAU-FILE]

       -thephi [THEPHI-FILE]
       -sigphi [SIGPHI-FILE]

       -thealp [THEALP-FILE]
       -sigalp [SIGALP-FILE]
       -pialp [PIALP-FILE]

       -thedel [THEDEL-FILE]
       -sigdel [SIGDEL-FILE]
       -pidel [PIDEL-FILE]